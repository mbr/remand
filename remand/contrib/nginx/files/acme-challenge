server {
  listen 80 default_server;
  listen [::]:80 default_server;

  root /var/www/html/.well-known/acme-challenge;
  index index.html index.htm index.nginx-debian.html;

  server_name _;

  location ~ /.well-known/acme-challenge/(.*) {
    try_files /$1 /$1/ =404;
  }

  location / {
    if ($scheme = http) {
         return 301 https://$server_name$request_uri;
    }
  }
}
